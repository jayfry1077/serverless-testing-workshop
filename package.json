{
  "name": "serverless-testing-workshop",
  "version": "0.1.0",
  "description": "Sample application for use in the Serverless Testing Workshop",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "concurrently 'npm:infra:watch' 'npm:rest-api:watch'",
    "infra:deploy": "cd ./services/infra && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "infra:watch": "cd ./services/infra && tsc -w",
    "rest-api:watch": "cd ./services/rest-api && tsc -w",
    "rest-api:dotenv": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls export-env -s $STAGE",
    "rest-api:deploy": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "test-unit": "cd ./services/rest-api && jest --testPathPattern=tests/unit -c jest.config.unit.js",
    "env": "npm run rest-api:dotenv",
    "test-integration": "cd ./services/rest-api && jest --testPathPattern=tests/integration -c jest.config.integration.js",
    "test-e2e": "cd ./services/rest-api && jest --testPathPattern=tests/e2e"
  },
  "keywords": [
    "serverless",
    "testing",
    "AWS",
    "Lambda"
  ],
  "author": "Paul Swail",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https: //github.com/WinterWindSoftware/serverless-testing-workshop"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.0",
    "serverless": "^2.8.0",
    "serverless-export-env": "^1.4.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3"
  },
  "dependencies": {
    "@dazn/lambda-powertools-logger": "^1.24.1",
    "aws-sdk": "^2.775.0",
    "axios": "^0.20.0",
    "lodash": "^4.17.20",
    "uuid": "^8.3.1"
  }
}
