{
  "name": "serverless-testing-workshop",
  "version": "0.1.0",
  "description": "Sample application for use in the Serverless Testing Workshop",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "tsc": "npm run rest-api:tsc",
    "infra:deploy": "cd ./services/infra && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "infra:tsc": "cd ./services/infra && tsc -w",
    "rest-api:tsc": "cd ./services/rest-api && tsc -w",
    "rest-api:dotenv": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls export-env -s $STAGE",
    "rest-api:deploy": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "rest-api:deploy-test": "npm run rest-api:deploy && npm run rest-api:dotenv && npm run test-e2e",
    "env": "npm run rest-api:dotenv",
    "test": "npm run test-unit",
    "test-unit": "cd ./services/rest-api && jest -c jest.config.unit.js",
    "test-integration": "cd ./services/rest-api && TEST_MODE=LOCAL_HANDLER jest -c jest.config.integration.js -t '^(?!.*(\\[e2e\\])).*$'",
    "test-e2e": "cd ./services/rest-api && TEST_MODE=REMOTE_TRIGGER jest -c jest.config.e2e.js -t '^(?!.*(\\[integration\\])).*$'",
    "test-all": "npm run test-unit && npm run test-integration && npm run test-e2e"
  },
  "keywords": [
    "serverless",
    "testing",
    "AWS",
    "Lambda"
  ],
  "author": "Paul Swail",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https: //github.com/serverlessfirst/serverless-testing-workshop"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-lambda": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@types/aws-lambda": "^8.10.64",
    "@types/bluebird": "^3.5.33",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "aws-testing-library": "^1.1.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "faker": "^5.1.0",
    "jest": "^26.6.0",
    "serverless": "2.4.0",
    "serverless-export-env": "^1.4.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ses": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@dazn/lambda-powertools-logger": "^1.24.1",
    "@types/serverless": "^1.78.9",
    "axios": "^0.20.0",
    "bluebird": "^3.7.2",
    "lodash": "^4.17.20",
    "uuid": "^8.3.1"
  }
}
