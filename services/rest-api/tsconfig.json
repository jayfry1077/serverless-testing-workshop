{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@svc/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@common/*": [
        "../../common/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "../../common/src/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ]
}
