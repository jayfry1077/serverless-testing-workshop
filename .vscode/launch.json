{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Root API - Integration Test - Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceFolder}/services/rest-api/jest.config.js"
            ],
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            },
            "env": {
                "AWS_PROFILE": "testing-workshop-student",
                "TEST_MODE": "LOCAL_HANDLER",
                "STAGE": "dev"
            },
            "console": "internalConsole",
            "outputCapture": "std",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Root API - Acceptance Test - Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceFolder}/services/rest-api/jest.config.js"
            ],
            "env": {
                "AWS_PROFILE": "testing-workshop-student",
                "TEST_MODE": "REMOTE_TRIGGER",
                "STAGE": "dev"
            },
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            },
            "console": "internalConsole",
            "outputCapture": "std",
            "disableOptimisticBPs": true
        }
    ]
}
